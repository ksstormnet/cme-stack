# n8n Workflow Automation Environment Configuration Template
# Copy this file to .env and replace with actual values
# Generated by: ./scripts/generate-dev-secrets.sh

# Database Configuration
DB_TYPE=mariadb
DB_MYSQLDB_HOST=your-mariadb-host
DB_MYSQLDB_PORT=3306
DB_MYSQLDB_DATABASE=cme_dev_n8n
DB_MYSQLDB_USER=cme_dev_n8n_user
DB_MYSQLDB_PASSWORD=GENERATED_PASSWORD_32_CHARS

# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=GENERATED_ADMIN_PASSWORD

# Encryption key for credentials
N8N_ENCRYPTION_KEY=GENERATED_64_CHAR_ENCRYPTION_KEY

# Webhook Configuration
WEBHOOK_URL=https://dev-n8n.cme.ksstorm.dev
N8N_PROTOCOL=https
N8N_HOST=dev-n8n.cme.ksstorm.dev
N8N_PORT=5678

# Environment
NODE_ENV=development
N8N_LOG_LEVEL=debug

# External API Integrations
OPENAI_API_KEY=your-openai-api-key
GOHIGHLEVEL_API_KEY=your-gohighlevel-api-key
VOIPMS_API_USER=your-voipms-user
VOIPMS_API_PASSWORD=your-voipms-password

# Internal Service URLs
WORDPRESS_URL=https://dev-wordpress.cme.ksstorm.dev
MATOMO_URL=https://dev-matomo.cme.ksstorm.dev
GLITCHTIP_URL=https://dev-glitchtip.cme.ksstorm.dev

# Workflow Configuration
N8N_WORKFLOW_TIMEOUT=300
N8N_MAX_EXECUTION_TIMEOUT=3600
N8N_EXECUTIONS_DATA_SAVE_ON_ERROR=all
N8N_EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
N8N_EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# File Storage
N8N_DEFAULT_BINARY_DATA_MODE=filesystem
N8N_BINARY_DATA_TTL=24

# Editor Configuration
N8N_EDITOR_BASE_URL=https://dev-n8n.cme.ksstorm.dev
N8N_DISABLE_UI=false

# Email Configuration (for notifications)
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=your-smtp-host
N8N_SMTP_PORT=587
N8N_SMTP_USER=your-smtp-user
N8N_SMTP_PASS=your-smtp-password
N8N_SMTP_SENDER=n8n@cme.ksstorm.dev